{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
